// Source: https://usaco.guide/general/io

#include <bits/stdc++.h>
using namespace std;

long long sumsquares(long long v) {
  return v * (v + 1) * (2 * v + 1) / 6;
}
int main() {
  int N; 
  cin >> N;
  vector<long long> cows(N);
  long long c = 0;
  for (int i = 0; i < N; i++) {
    cin >> cows[i];
    c = max(0ll, c + cows[i] - 1);
  }
  for (int i = 0; ; i++) {
    if (c == 0) {
      rotate(cows.begin(), cows.begin() + i, cows.begin() + N);
      break;
    }
    c = max(0ll, c + cows[i] - 1);
  }


  long long ans = 0;
  for (int i = 0; i < N; i++) {
    ans += sumsquares(cows[i] + c - 1) - sumsquares(c - 1);
    c = max(0ll, c + cows[i] - 1);
  }
  cout << ans << endl;
}
