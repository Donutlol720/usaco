// Source: https://usaco.guide/general/io

#include <bits/stdc++.h>
using namespace std;

int main() {
	int N, Tmax;
    cin >> N >> Tmax;
    vector<long long> times;
    for (int i=0;i<=N-1;i++){
        long long x;
        cin >> x;
        times.push_back(x);
    }
    int left = 1, right = N, mid = 0; //mid is max ppl on stage
    while (left<=right){
        //i forgot to add this before so the queue never reset T.T
        priority_queue<long long, vector<long long>, greater<long long>> endtimes;
        mid = left + (right-left)/2;
        // cout << "mid: " << mid << endl;
        bool works = true;
        for (int i=0;i<=N-1;i++){
            //no wait times
            if (i<mid){
                endtimes.push(times[i]);
            }else{
                long long finished = endtimes.top();
                endtimes.pop();
                endtimes.push(finished + times[i]);
                //mid value is not valid, takes too much time for cows to finish dancing
                if (finished + times[i] > Tmax){
                    works = false;
                    break;
                }
            }
            
        }
        //potentially less people work
        if (works){
            right = mid-1;
        }else{
            //must be greater
            left = mid+1;
        }
        
    }
    cout << left;
}
